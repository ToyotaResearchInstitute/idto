<?xml version="1.0"?>
<robot name="spinner">
  <material name="green">
    <color rgba=".3 .6 .4 1"/>
  </material>
  <material name="red">
    <color rgba=".9 .1 0 1"/>
  </material>
  <material name="blue">
    <color rgba="0.1 0.3 0.5 1"/>
  </material>

  <!-- Fixed base for the finger, welded to the world -->
  <link name="base">
    <inertial>
      <origin rpy="0 0 0" xyz="0 0 0"/>
      <mass value="1"/>
      <inertia ixx="0" ixy="0" ixz="0" iyy="0" iyz="0" izz="0"/>
    </inertial>
    <visual>
      <origin xyz="0 0 0"/>
      <geometry>
        <sphere radius=".07"/>
      </geometry>
      <material name="green"/>
    </visual>
  </link>
  <joint name="base_weld" type="fixed">
    <parent link="world"/>
    <child link="base"/>
    <origin xyz="0 0 0" rpy="1.57079632679 0 0 "/>
  </joint>

  <!-- First finger link -->
  <link name="finger_one">
    <inertial>
      <origin rpy="0 0 0" xyz="0 0 0.5"/>
      <mass value="1.0"/>
      <inertia ixx="0.0839" ixy="0" ixz="0" iyy="0.0839" iyz="0" izz="0.00125"/>
    </inertial>
    <visual>
      <origin rpy="0 0 0" xyz="0 0 0.5"/>
      <geometry>
        <capsule length="0.9" radius="0.05"/>
      </geometry>
      <material name="red"/>
    </visual>
    <!-- 
      There is no collision geometry for the first link, since it can't reach
      the spinner.
     -->
  </link>
  <joint name="theta_one" type="fixed">
    <parent link="base"/>
    <child link="finger_one"/>
    <origin xyz="0 0 0" rpy="0 0.3 0"/>
    <axis xyz="0 1 0"/>
    <dynamics damping="0.1"/>
  </joint>

  <!-- Second finger link -->
  <link name="finger_two">
    <inertial>
      <origin rpy="0 0 0" xyz="0 0 0.5"/>
      <mass value="1.0"/>
      <inertia ixx="0.0839" ixy="0" ixz="0" iyy="0.0839" iyz="0" izz="0.00125"/>
    </inertial>
    <visual>
      <origin rpy="0 0 0" xyz="0 0 0.5"/>
      <geometry>
        <capsule length="0.9" radius="0.05"/>
      </geometry>
      <material name="red"/>
    </visual>
    <!--
    <collision>
      <origin rpy="0 0 0" xyz="0 0 0.5"/>
      <geometry>
        <capsule length="0.9" radius="0.05"/>
      </geometry>
    </collision>
    <collision>
      <origin rpy="0 0 0" xyz="0 0 0.05"/>
      <geometry>
        <sphere radius=".05"/>
      </geometry>
    </collision>
    <collision>
      <origin rpy="0 0 0" xyz="0 0 0.5"/>
      <geometry>
        <cylinder length="0.9" radius=".05"/>
      </geometry>
    </collision>
    -->
    <collision>
      <origin rpy="0 0 0" xyz="0 0 0.95"/>
      <geometry>
        <sphere radius=".05"/>
      </geometry>
    </collision>
  </link>
  <joint name="theta_two" type="continuous">
    <parent link="finger_one"/>
    <child link="finger_two"/>
    <origin xyz="0 0 1"/>
    <axis xyz="0 1 0"/>
    <dynamics damping="0.1"/>
  </joint>

  <!-- The spinner itself -->
  <link name="spinner">
    <inertial>
      <origin rpy="0 0 0" xyz="0 0 0"/>
      <mass value="1.0"/>
      <inertia ixx="0.054" ixy="0" ixz="0" iyy="0.074" iyz="0" izz="0.022"/>
    </inertial>
    <visual>
      <origin rpy="1.57079632679 0 0" xyz="0 0 0"/>
      <geometry>
        <cylinder length="0.6" radius=".04"/>
      </geometry>
      <material name="green"/>
    </visual>
    <visual>
      <origin rpy="0 0 0" xyz="0 0 0"/>
      <geometry>
        <capsule radius="0.25" length="0.8"/>
      </geometry>
      <material name="blue"/>
    </visual>
    <collision>
      <origin rpy="0 0 0" xyz="0 0 0"/>
      <geometry>
        <capsule radius="0.25" length="0.8"/>
      </geometry>
    </collision>
  </link>
  <joint name="theta_three" type="continuous">
    <parent link="base"/>
    <child link="spinner"/>
    <origin xyz="1.5 0 1.0"/>
    <axis xyz="0 1 0"/>
    <dynamics damping="0.0"/>
  </joint>

  <!-- Actuator for the one moveable finger-->
  <transmission type="SimpleTransmission" name="theta_two_trans">
    <actuator name="theta_two"/>
    <joint name="theta_two"/>
    <mechanicalReduction>1</mechanicalReduction>
  </transmission>
</robot>
